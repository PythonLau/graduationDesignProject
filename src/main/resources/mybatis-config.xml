<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <!--要使延时加载生效必须配置下面两个属性-->
        <setting name="lazyLoadingEnabled" value="true"/>
        <setting name="aggressiveLazyLoading" value="false"/>
        <!--二级缓存-->
        <setting name="cacheEnabled" value="true"/>
    </settings>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"></transactionManager>
            <dataSource type="POOLED">
                <property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
                <property name="url" value="jdbc:oracle:thin:@127.0.0.1:1521:petsHospital"/>
                <property name="username" value="system"/>
                <property name="password" value="Manager123"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper class="com.petsHospital.mapper.PersonMapper"/>
        <mapper class="com.petsHospital.mapper.CardMapper"/>
        <mapper class="com.petsHospital.mapper.ClazzMapper"/>
        <mapper class="com.petsHospital.mapper.StudentMapper"/>
        <mapper class="com.petsHospital.mapper.OrderMapper"/>
        <mapper class="com.petsHospital.mapper.UserMapper"/>
        <mapper class="com.petsHospital.mapper.ArticleMapper"/>
        <mapper class="com.petsHospital.mapper.EmployeeMapper"/>
    </mappers>
</configuration>